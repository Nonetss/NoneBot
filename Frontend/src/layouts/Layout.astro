---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Porfolio de Antonio Moreno LÃ³pez Barajas"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Baloo+Thambi+2:wght@400..800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --color-texto: #fff;
    --color-texto-secundario: #d0d3d4;
    --color-bg: #273746;
    --color-principal: #f8636e;
    --color-secundario: #4a90e2;
  }
  /* Personaliza el ancho de la barra de desplazamiento */
  ::-webkit-scrollbar {
    width: 22px;
  }

  /* Estilo del track de la barra */
  ::-webkit-scrollbar-track {
    background: var(--color-bg); /* Fondo del track */
    border-left: solid 5px #000;
  }

  /* Estilo del thumb (barra de desplazamiento) */
  ::-webkit-scrollbar-thumb {
    background-color: var(--color-principal); /* Color de la barra */
    border: solid 5px #000;
    border-right: none;
  }

  /* Hover en el thumb */
  ::-webkit-scrollbar-thumb:hover {
    background-color: #888; /* Cambia el color al pasar el mouse */
  }

  * {
    margin: 0;
    padding: 0;
    font-family: "Baloo Thambi 2";
    font-weight: 500;
    color: var(--color-texto);
    background-color: var(--color-bg);
  }
  a {
    text-decoration: none;
    color: var(--color-texto);
    font-size: 1.2rem;
    font-weight: 600;
    background: none;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    background: none;
  }
  h3 {
    font-size: 3rem;
    font-weight: 700;
    background: none;
  }
</style>
