---
interface Boton {
  texto: string;
  enlace: string;
}

interface Props {
  botones: Boton[];
}

const { botones }: Props = Astro.props;
---

<div class="botones-link">
  {
    botones.map((boton) => (
      <button>
        <a href={boton.enlace}>
          <p>{boton.texto}</p>
          <img src="/assets/link-arrow.svg" alt="" />
        </a>
      </button>
    ))
  }
</div>

<style>
  a {
    text-align: left;
    display: flex;
    padding: 0 10px;
    width: 100%;
    padding: 10px 20px;
  }
  p {
    display: block;
    flex: 1;
    background: none;
  }
  img {
    height: 20px;
    align-self: center;
    display: block;
    background: none;
  }
  .botones-link {
    display: flex;
    width: 100%;
    border: solid 5px #000;
  }

  .botones-link button {
    width: 100%;
    border: none;
    border-right: solid 5px #000;
    display: flex;
  }
  .botones-link button:last-child() {
    border-right: none;
  }
  img:hover() {
    background: none;
  }

  .botones-link :hover() {
    transition: 0.2s;
    background-color: var(--color-principal);
  }
</style>
