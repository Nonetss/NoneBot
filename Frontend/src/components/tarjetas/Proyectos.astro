---
interface Proyecto {
  nombre: string;
  imgEnlace: string;
  titulo: string;
  descripcion: string;
  enlaceProyecto: string;
}

interface Props {
  proyectos: Proyecto[];
}

const { proyectos }: Props = Astro.props;
import BotonIndi from "@components/botones/BotonIndi.astro";
---

<nav class="scroller">
  {
    proyectos.map((proyecto) => (
      <div class="proyecto">
        <div class="proyecto-nombre">
          <p>{proyecto.nombre}</p>
        </div>
        <div class="proyecto-imagen">
          <img src={proyecto.imgEnlace} alt={`Imagen de ${proyecto.nombre}`} />
        </div>
        <div class="proyecto-detalles">
          <h3>{proyecto.titulo}</h3>
          <p>{proyecto.descripcion}</p>
          <BotonIndi texto="Ver el proyecto" enlace={proyecto.enlaceProyecto} />
        </div>
      </div>
    ))
  }
</nav>

<style>
  /* ðŸ”¹ Contenedor con scroll */
  .scroller {
    display: flex;
    width: 100%;
    overflow-x: auto;
    overflow-y: hidden;
    gap: 100px;
    padding: 16px 0px;

    /* ðŸ›  Habilitar scroll snapping */
    scroll-snap-type: x mandatory;
    scrollbar-width: none;
  }

  .scroller > .proyecto {
    scroll-snap-align: center;
    justify-content: center;
    align-items: center;
    border: 5px solid #000;
    box-shadow: 6px 6px 0px 0px rgba(0, 0, 0, 0.9);
    width: 600px;
    flex-shrink: 0;
  }

  .proyecto:first-child() {
    margin-left: calc(50% - 300px);
  }
  .proyecto:last-child() {
    margin-right: calc(50% - 300px);
  }

  /* Ocultar scrollbar en Chrome, Edge y Safari */
  .scroller::-webkit-scrollbar {
    display: none;
  }

  /* ðŸ”¹ Cada tarjeta de proyecto se anclarÃ¡ en el scroll */
  p {
    background: none;
  }

  .proyecto-nombre {
    text-align: center;
    background-color: var(--color-principal);
    padding: 5px 0px;
    border-bottom: solid 5px #000;
  }

  .proyecto-imagen {
    border-bottom: solid 5px #000;
  }

  .proyecto-detalles {
    padding: 20px;
    background-color: #2c3e50;
  }
</style>
